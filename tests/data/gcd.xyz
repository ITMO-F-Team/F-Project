; Returns GCD (greatest common divisor) of values `a` and `b`

(func mod (dividend divisor)
  (cond (< dividend divisor)
    dividend
    (mod (minus dividend divisor) divisor)
  )
)

(func gcd (x y)
  (cond (equal y 0)
    x
    (gcd y (mod x y))
  )
)


; =========
; Testcases
; =========

(equal (gcd 34 17) 17)  ; true
(equal (gcd 20 34) 2)   ; true
(equal (gcd 20 0) 20)   ; true
(equal (gcd 20 20) 20)  ; true
(equal (gcd 20 15) 5)   ; true
(equal (gcd 0 15) 15)   ; true

